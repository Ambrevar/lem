    (inferior-lisp-mode)))

(define-key *inferior-lisp-mode-keymap* "C-m" 'inferior-lisp-eval)
(define-command inferior-lisp-eval () ()
  (let ((point (point)))
    (when (backward-sexp)
      (mark-sexp)
      (let ((expr
             (read-from-string
              (region-string (region-beginning)
                             (region-end)))))
        (point-set point)
        (insert-newline 1)
        (insert-string (write-to-string (safe-eval expr)))
        (insert-newline 1)))))
