(define-key *lisp-mode-keymap* "C-xz" 'go-to-lisp)
(define-key *lisp-mode-keymap* "M-z" 'go-to-lisp)
(define-command go-to-lisp () ()
  (save-some-buffers)
  (dolist (buffer *buffer-list*)
    (when (eq 'lisp-mode (buffer-major-mode buffer))
      (if (buffer-filename buffer)
        (load (buffer-filename buffer))
        (progn
          (set-buffer buffer)
          (eval-buffer)
          (unmark-buffer)))))
  (exit-lem))

(define-key *lisp-mode-keymap* "C-xm" 'macroexpand-lisp)
(define-command macroexpand-lisp (arg) ("P")
  (let ((expr
         (read-from-string
          (region-string (point)
                         (let ((start (point)))
                           (forward-sexp)
                           (prog1 (point)
                             (point-set start)))))))
    (let* ((buffer (get-buffer-create "*macroexpand*"))
           (out (make-buffer-output-stream buffer)))
      (popup buffer
             (lambda ()
               (pprint (if arg
                         (macroexpand expr)
                         (macroexpand-1 expr))
                       out))))))

